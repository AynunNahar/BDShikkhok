<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/left_margin"
    android:layout_marginRight="@dimen/right_margin"
    android:orientation="horizontal">


    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        app:cardElevation="3dp"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/jafor" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameList"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Muhammed Zafar Iqbal "
                    android:textSize="@dimen/my_text_value"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#707070"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="professor of computer science and engineering at Shahjalal University of Science and Technology (SUST).["
                    android:textSize="@dimen/my_text_value"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#C2C2C2"
                    android:maxLength="60"
                    />
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/discount_background"
                    android:gravity="center"
                    android:weightSum="2"
                    android:padding="5dp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discount:"
                        android:textSize="@dimen/button_text_value"
                        android:paddingLeft="10dp"
                        android:textColor="#CBCBCB" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000tk"
                        android:textSize="@dimen/button_text_value"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorRedText"/>

                </LinearLayout>

            </LinearLayout>


<!--
            <RatingBar
                android:id="@+id/rating"
                android:layout_weight="1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:max="5"
                android:stepSize=".1"
                android:isIndicator="true"
                android:rating="2.5"
                android:theme="@style/RatingBar"
                android:layout_alignParentRight="true"
                android:focusable="false"
                android:clickable="false"
                android:layout_marginTop="10dp"
                android:paddingRight="5dp"/>
-->

        </LinearLayout>


    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

</LinearLayout>